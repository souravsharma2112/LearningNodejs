<html ng-app="ionicApp">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width">

    <title>Ionic Fullscreen Image</title>

    <link href="//code.ionicframework.com/1.0.0-rc.1/css/ionic.min.css" rel="stylesheet">
    <script src="//code.ionicframework.com/1.0.0-rc.1/js/ionic.bundle.js"></script>
    <link rel="stylesheet" href="../CSS/home.css">
</head>


<body ng-controller="FullscreenImageCtrl">
    <ion-nav-view>
        <div class="bar bar-header bar-positive">
            <h1 class="title">Header</h1>
        </div>

        <ion-content class="has-header">
            <div class="card">
                <div class="item item-divider">
                    Fullscreen images
                </div>
                <div class="item item-text-wrap">
                    <div class="button-bar">
                        <a class="button" ng-click="showImage(1)">Small</a>
                        <a class="button" ng-click="showImage(2)">Medium</a>
                        <a class="button" ng-click="showImage(3)">Very large</a>
                    </div>
                </div>
            </div>

            <script id="image-modal.html" type="text/ng-template">
              <div class="modal image-modal transparent" ng-click="closeModal()">
                  <ion-pane class="transparent">
                     <img ng-src="{{imageSrc}}" class="fullscreen-image"/>
                  </ion-pane>
              </div>
          </script>

        </ion-content>

        <div class="bar bar-footer bar-balanced">
            <div class="title">Footer</div>
        </div>
    </ion-nav-view>
</body>

</html>